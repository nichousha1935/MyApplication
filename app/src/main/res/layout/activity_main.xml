<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#e65"
        app:subtitle="android"
        app:subtitleTextColor="#fff"
        app:title="ANDROID"
        app:titleTextColor="#fff">
    </android.support.v7.widget.Toolbar>

    <com.example.ind4.myapplication.views.NoScrollViewPager
        android:id="@+id/viewpage_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:layout_weight="1">
    </com.example.ind4.myapplication.views.NoScrollViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_order"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="#E45622"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="#E45622"
        app:tabTextColor="#000000">
    </android.support.design.widget.TabLayout>
</LinearLayout>